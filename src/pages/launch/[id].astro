---
import Layaout from "../../layouts/Layout.astro";
import { getLaunchBy } from "../../services/spacex";

export const prerender = false // to server

const { id } = Astro.params;

let launch;
//  Only to server
if (id) {
  launch = await getLaunchBy({ id });
}
---

<Layaout title=`Lauch ${id}`>
  <article class="flex gap-y-4 flex-col">
    <img
      class="w-52 h-auto"
      src={launch?.links?.patch.small}
      alt={launch?.name}
    />
    <h2 class="text-4xl font-bold">Launch #{launch?.flight_number}</h2>
    <p class="text-lg">{launch?.details}</p>
  </article>
</Layaout>
